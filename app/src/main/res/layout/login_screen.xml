<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/light"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@drawable/state_3_"/>

    <TextView
        android:id="@+id/textInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_check_the_details_and_confirm_your_appointment"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="32dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#777777"
                android:layout_weight="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday, 19"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:30pm"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textColor="#777777"
                android:layout_weight="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic pedicure with Paty"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#777777"
                android:layout_weight="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8502 Preston Rd. Inglewood"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paintFlags="underline"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="#777777"
                android:layout_weight="1"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:src="@drawable/mastercard"
                android:contentDescription="Card Icon" />

            <TextView
                android:id="@+id/textCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•••• 2345"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="16sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\$35"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/buttonBook"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/book"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#F7C6C3"
        android:layout_marginTop="270dp"
        android:enabled="true"
        android:layout_gravity="bottom"/>

</LinearLayout>
